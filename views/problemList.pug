doctype html
html(lang='en')
  head
    link(rel='stylesheet' href='css/style.css')
    link(rel='stylesheet' href='css/nav-layout.css')
    link(rel='stylesheet' href='css/layout.css')
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Document
  nav
    ul.grid.nav-grid
      li.nav-item.grid-item.item1
        a(href='/index.html') Home
      li.nav-item.grid-item.item2.current
        a(href='/locations.html') Location List
      li.nav-item.grid-item.item3
        a(href='/map.html') Map View
  .grid.container
    .grid-item.header
      h1 Filtered by: !{problemList[0].rating}
      <br/>
      ul
        each val in problemList
          div
            a(class='probLink' href=`/problem/${val.id}`)=`${val.rating} ${val.name}`
              //li=val.name
              //li= "(" + val.rating + ")" + " " +  val.name + " - " + val.location[3]=name
    .grid-item.main-content !{problemDetails}
    .grid-item.sidebar
      