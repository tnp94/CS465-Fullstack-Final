doctype html
html(lang='en')
  head
    link(rel='stylesheet' href='../css/style.css')
    link(rel='stylesheet' href='../css/nav-layout.css')
    link(rel='stylesheet' href='../css/layout.css')
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Document
  nav
    ul.grid.nav-grid
      li.nav-item.grid-item.item1
        a(href='/index.html') Home
      li.nav-item.grid-item.item2.current
        a(href='/locations.html') Location List
      li.nav-item.grid-item.item3
        a(href='/map.html') Map View
  .grid.container
    .grid-item.header
      h1 Location: !{location}, Problem: !{problem}
    .grid-item.main-content !{problemDetails}
      h2 !{problem}
      p Route id: !{routeID}
      p Route type: !{type}
      p Difficulty rating: !{difficulty}
      p Star Rating: !{stars} stars
      p Location hierarchy: !{locationHierarchy}
      p Mountain project page link: 
        a(href=link) !{problem}
    .grid-item.sidebar
      img.problem-image(src=imageUrl alt='Picture of the !{problemName} bouldering problem')
      